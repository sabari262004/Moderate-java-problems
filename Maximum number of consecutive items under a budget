
class Main {
    public static void main(String[] args) {

      int arr[]={5, 2, 3, 1, 1, 1, 2};
      int m=5;
      int max=0;
     
      for(int i=0;i<arr.length;i++){
          int c=arr[i];
          int count=1;
           for(int j=i+1;j<arr.length;j++){
          if((arr[j]+c)<=m){
              c=c+arr[j];
              count++;
          }
          else{
              break;
          }
      }
       max=Math.max(max,count);
      }
      System.out.print(max);
    }
}
